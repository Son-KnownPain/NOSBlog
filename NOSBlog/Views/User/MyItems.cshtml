@{ 
    ViewBag.Title = "NOS Blog | My Items";
}
@section styles{
    <style>
        .content-body {
            margin-top: 24px;
        }

        .item {
            border: 1px solid #999;
            border-radius: 6px;
            overflow: hidden;
        }

        .item-img {
            padding-top: 100%;
            background-repeat: no-repeat;
            object-fit: cover;
            background-position: center;
            background-size: contain;
        }

        .item-info {
            padding: 6px;
            font-size: 1.6rem;
            font-weight: 500;
        }

        .item-name {
            font-size: 2rem;
            font-weight: 600;
        }

        .item-price i {
            color: #ffbf00;
        }

        .item-cp i {
            color: #007fff;
        }
    </style>
}

<div class="container">
    <h1 class="page-heading">
        My Items
    </h1>
    <div class="content-body">
        <div class="items">
            <div class="row">
                @if (ViewBag.items.Count == 0)
                {
                    <p class="alert-warning" style="font-size: 1.6rem; font-weight: 500;">
                        You hasn't any item
                    </p>
                }
                @foreach (var item in ViewBag.items)
                {
                    <div class="col-xl-2">
                        <div class="item">
                            <div class="item-img" style="background-image: url('/Uploads/Items/@item.image')"></div>
                            <div class="item-info">
                                <h3 class="item-name">@item.name</h3>
                                <p class="item-priceBox">
                                    <span class="item-price">
                                        <i class="fa-solid fa-coins"></i>
                                        @item.price
                                    </span>
                                    <span class="item-cp">
                                        <i class="fa-solid fa-star"></i>
                                        @item.collection_points
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>