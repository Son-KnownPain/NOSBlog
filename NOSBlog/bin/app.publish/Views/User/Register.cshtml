@model NOSBlog.Models.user
@{
    ViewBag.Title = "NOS Blog - Register";
}

@section styles {
    <link rel="stylesheet" href="~/Content/Css/Pages/Register.css" />
}

<div class="container">
    <h1 class="page-heading">
        <i class="fa-solid fa-user-plus"></i>
        Register
    </h1>

    <p class="page-description">
        Please enter all necessary information to create a new account. If you already have an account, please <a href="/user/login">login here</a>.
    </p>

    <div class="content-body">
        <!-- Register Form HTML5 -->
