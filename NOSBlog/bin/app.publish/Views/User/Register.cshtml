        <!-- Register Form Using ASP.NET MVC 5 Helpers -->
        @using (Html.BeginForm("Store", "User", FormMethod.Post, new { @id = "login-form" }))
        {
            <div class="form-item">
                @Html.LabelFor(user => user.first_name, new { @class = "form-label" })
                @Html.EditorFor(user => user.first_name, new { htmlAttributes = new { @class = "form-input", @placeHolder = "Enter first name" } })
                @Html.ValidationMessageFor(user => user.first_name, null, new { @class = "form-invalidMessage" })
            </div>

            <div class="form-item">
                @Html.LabelFor(user => user.last_name, new { @class = "form-label" })
                @Html.EditorFor(user => user.last_name, new { htmlAttributes = new { @class = "form-input", @placeHolder = "Enter last name" } })
                @Html.ValidationMessageFor(user => user.last_name, null, new { @class = "form-invalidMessage" })
            </div>

            <div class="form-item">
                @Html.LabelFor(user => user.username, new { @class = "form-label" })
                @Html.EditorFor(user => user.username, new { htmlAttributes = new { @class = "form-input", @placeHolder = "Enter username" } })
                @Html.ValidationMessageFor(user => user.username, null, new { @class = "form-invalidMessage" })
            </div>

            <div class="form-item">
                @Html.LabelFor(user => user.email, new { @class = "form-label" })
                @Html.EditorFor(user => user.email, new { htmlAttributes = new { @class = "form-input", @placeHolder = "Enter email" } })
                @Html.ValidationMessageFor(user => user.email, null, new { @class = "form-invalidMessage" })
            </div>

            <div class="form-item">
                @Html.LabelFor(user => user.phone, new { @class = "form-label" })
                @Html.EditorFor(user => user.phone, new { htmlAttributes = new { @class = "form-input", @placeHolder = "Enter phone" } })
                @Html.ValidationMessageFor(user => user.phone, null, new { @class = "form-invalidMessage" })
            </div>

            <div class="form-item">
                @Html.LabelFor(user => user.password, new { @class = "form-label" })
                @Html.PasswordFor(user => user.password, new { @class = "form-input", placeHolder = "Enter password" })
                @Html.ValidationMessageFor(user => user.password, null, new { @class = "form-invalidMessage" })
            </div>

            <button class="form-submitBtn">
                Register
            </button>
        }
    </div>
</div>
